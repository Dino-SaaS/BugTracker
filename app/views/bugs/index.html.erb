                    <a href="#" class="avatar rounded-circle mr-3">
                      <%= image_tag "theme/angular.jpg", alt: "..." %>
                    </a>
                    <div class="media-body">
                      <span class="name mb-0 text-sm">Angular Now UI Kit PRO</span>
                    </div>
                  </div>
                </th>
                <td class="budget">
