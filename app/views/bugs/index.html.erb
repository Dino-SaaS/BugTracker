<div class="header bg-primary pb-6">
  <div class="container-fluid">
    <div class="row align-items-center py-4">
      <div class="col-lg-6 col-7">
        <h6 class="h2 text-white d-inline-block mb-0">Bugs</h6>
      </div>
    </div>
  </div>
</div>
<div class="container-fluid mt--6">
  <div class="row">
    <div class="col">
      <div class="card">
        <!-- Card header -->
        <div class="card-header border-0">
          <h3 class="mb-0">All Bugs</h3>
        </div>
        <!-- Light table -->
        <div class="table-responsive">
          <table class="table align-items-center table-flush">
            <thead class="thead-light">
              <tr>
                <th scope="col" class="sort" data-sort="name">Title</th>
                <th scope="col" class="sort" data-sort="budget">Platform</th>
                <th scope="col" class="sort" data-sort="status">Status</th>
                <th scope="col" class="sort" data-sort="status">Created</th>
                <th scope="col" class="sort" data-sort="status">Last Updated</th>
                <th scope="col"></th>
              </tr>
            </thead>
            <tbody class="list">
              <% @bugs.each do |bug| %>
                <tr>
                    <th scope="row" class="bug">
                      <a href="<%= bug_path(bug) %>">
                        <div class="media align-items-center">
                          <div class="media-body">
                            <span class="bug-title name mb-0 text-sm"><%= bug.title %></span>
                          </div>
                        </div>
                      </a>
                    </th>
                  <td class="budget">
                    <%= bug.platform %>
                  </td>
                  <td>
                    <span class="badge badge-dot mr-4">
                      <i class="<%= status_icon_class(bug) %>"></i>
                      <span class="status"><%= render_status(bug) %></span>
                    </span>
                  </td>
                  <td>
                    <span class="bug-date"><%= render_date(bug.created_at) %></span>
                  </td>
                  <td>
                    <span class="bug-date"><%= render_date(bug.updated_at) %></span>
                  </td>
                  <td>
                    <a class="action-icon" href="<%= edit_bug_path(bug) %>"><%= fa_icon 'edit' %></a>
                    <a class="action-icon ml-2" data-toggle="modal"
                       data-target="#modal-notification"><%= fa_icon 'trash' %>
                    </a>
                  </td>
                </tr>


                <div class="modal fade" id="modal-notification" tabindex="-1" role="dialog" aria-labelledby="modal-notification" aria-hidden="true">
                  <div class="modal-dialog modal-danger modal-dialog-centered modal-" role="document">
                    <div class="modal-content bg-gradient-danger">
                      <div class="modal-header">
                        <h6 class="modal-title" id="modal-title-notification">Are you sure?</h6>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                          <span aria-hidden="true">Ã—</span>
                        </button>
                      </div>
                      <div class="modal-body">
                        <div class="py-3 text-center">
                          <i class="ni ni-bell-55 ni-3x"></i>
                          <h4 class="heading mt-4">You're about to delete this bug:</h4>
                          <p><i><%= bug.title %></i></p>
                        </div>
                      </div>
                      <div class="modal-footer">
                        <a href="<%= bug_path(bug) %>" id="delete" data-method="delete" class="btn btn-white">DELETE IT</a>
                        <button type="button" class="btn btn-link text-white ml-auto" data-dismiss="modal">Close</button>
                      </div>
                    </div>
                  </div>


              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
